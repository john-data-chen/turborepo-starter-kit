{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*",
    "packages/linter-config/*",
    "packages/style-formatter-config/*",
    "packages/tsconfig/*"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**"
      ],
      "env": [
        "JWT_SECRET",
        "DATABASE_URL",
        "NODE_ENV"
      ]
    },
    "lint": {
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "__tests__/**/*.{ts,tsx,js,jsx}"
      ]
    },
    "format": {
      "cache": false,
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx,css,scss}",
        "__tests__/**/*.{ts,tsx,js,jsx,css,scss}"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "^build"
      ]
    },
    "test": {
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "__tests__/**/*.{ts,tsx,js,jsx}"
      ],
      "outputs": [
        "coverage/**"
      ]
    },
    "init-db": {
      "cache": false,
      "dependsOn": [
        "^build"
      ]
    },
    "init-db:force": {
      "cache": false,
      "dependsOn": [
        "^build"
      ]
    }
  }
}