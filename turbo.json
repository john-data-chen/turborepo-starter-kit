{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NODE_ENV",
    "ENABLE_EXPERIMENTAL_COREPACK"
  ],
  "globalDependencies": [
    "**/.env.*",
    "packages/linter-config/*",
    "packages/global-tsconfig/*"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**"
      ]
    },
    "storybook": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        ".storybook/**/*"
      ]
    },
    "storybook:build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "storybook-static/**"
      ]
    },
    "storybook:test": {
      "cache": false,
      "dependsOn": [
        "^build"
      ]
    },
    "@repo/store#build": {
      "dependsOn": [],
      "outputs": []
    },
    "@repo/ui#build": {
      "dependsOn": [],
      "outputs": []
    },
    "@repo/ui#storybook": {
      "cache": false,
      "persistent": true,
      "dependsOn": [],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        ".storybook/**/*"
      ]
    },
    "@repo/ui#build-storybook": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "storybook-static/**"
      ]
    },
    "@repo/ui#test-storybook": {
      "cache": false,
      "dependsOn": [
        "^build"
      ]
    },
    "web#build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "api#build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "mobile#dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "^build"
      ]
    },
    "mobile#build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "lint": {
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "__tests__/**/*.{ts,tsx,js,jsx}"
      ]
    },
    "format": {
      "cache": false,
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx,css,scss}",
        "__tests__/**/*.{ts,tsx,js,jsx,css,scss}"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "^build"
      ]
    },
    "test": {
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "__tests__/**/*.{ts,tsx,js,jsx}"
      ],
      "outputs": [
        "coverage/**"
      ]
    },
    "playwright": {
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "__tests__/**/*.{ts,tsx,js,jsx}"
      ],
      "cache": false
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "init-db": {
      "env": [
        "DATABASE_URL"
      ],
      "cache": false,
      "dependsOn": [
        "^build"
      ]
    },
    "init-db:force": {
      "env": [
        "DATABASE_URL"
      ],
      "cache": false,
      "dependsOn": [
        "^build"
      ]
    }
  }
}