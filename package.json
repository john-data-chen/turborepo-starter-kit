{
  "name": "turborepo-starter-kit",
  "version": "1.0.0",
  "private": true,
  "author": {
    "name": "john.chen",
    "url": "https://github.com/john-data-chen/turborepo-starter-kit"
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "test": "turbo test",
    "test:watch": "turbo run test:watch",
    "playwright": "turbo run playwright --filter=./apps/web",
    "init-db": "turbo run init-db",
    "init-db:force": "turbo run init-db:force",
    "prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then husky; fi",
    "commit": "git-cz"
  },
  "engines": {
    "node": ">=22.11.0"
  },
  "packageManager": "pnpm@10.18.0",
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,css,scss}": [
      "prettier --ignore-path ./.prettierignore --write --no-error-on-unmatched-pattern --config ./prettier.config.js"
    ],
    "**/*.{js,jsx,ts,tsx}": [
      "npx oxlint --config ./packages/linter-config/.oxlintrc.json --type-aware --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/cz-commitlint": "^20.1.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "commitizen": "^4.3.1",
    "dotenv": "^17.2.3",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.3",
    "oxlint": "^1.20.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^2.5.8",
    "unplugin-swc": "^1.5.7",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "react": "^19.2.0",
      "react-dom": "^19.2.0",
      "@radix-ui/react-icons": "^1.3.2",
      "class-variance-authority": "^0.7.1",
      "react-hook-form": "^7.64.0",
      "tailwindcss": "^4.1.14",
      "@types/react": "19.2.2",
      "@types/react-dom": "19.2.1",
      "@types/node": "^22.18.8",
      "lucide-react": "^0.545.0",
      "oxlint": "^1.20.0",
      "typescript": "^5.9.3"
    },
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@scarf/scarf",
      "@swc/core",
      "@tailwindcss/oxide",
      "esbuild",
      "sharp",
      "unrs-resolver"
    ]
  },
  "dependencies": {
    "vite-tsconfig-paths": "^5.1.4"
  }
}