{
  "name": "turborepo-starter-kit",
  "version": "1.0.0",
  "private": true,
  "author": {
    "name": "john.chen",
    "url": "https://github.com/john-data-chen/turborepo-starter-kit"
  },
  "scripts": {
    "build": "turbo run build",
    "commit": "git-cz",
    "dev": "turbo dev",
    "format": "turbo run format",
    "init-db": "turbo run init-db",
    "init-db:force": "turbo run init-db:force",
    "lint": "turbo run lint",
    "playwright": "turbo run playwright --filter=./apps/web",
    "playwright:install": "pnpm --filter=./apps/web exec playwright install --with-deps",
    "prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then husky; fi",
    "storybook": "turbo run storybook --filter=@repo/ui",
    "storybook:build": "turbo run storybook:build --filter=@repo/ui",
    "storybook:test": "turbo run storybook:test --filter=@repo/ui",
    "test": "turbo test",
    "test:watch": "turbo run test:watch"
  },
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=24.13.0"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,css,scss}": [
      "oxfmt --no-error-on-unmatched-pattern --config ./.oxfmtrc.json"
    ],
    "**/*.{js,jsx,ts,tsx}": [
      "npx oxlint --config ./.oxlintrc.json --type-aware --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@commitlint/cz-commitlint": "^20.4.1",
    "@testing-library/jest-dom": "catalog:",
    "@testing-library/react": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "commitizen": "^4.3.1",
    "dotenv": "^17.2.4",
    "husky": "^9.1.7",
    "jsdom": "catalog:",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "oxlint-tsgolint": "^0.11.4",
    "start-server-and-test": "^2.1.3",
    "turbo": "^2.8.3",
    "vitest": "catalog:"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@parcel/watcher",
      "@scarf/scarf",
      "@tailwindcss/oxide",
      "esbuild",
      "sharp",
      "unrs-resolver"
    ]
  }
}