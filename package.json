{
  "name": "turborepo-starter-kit",
  "version": "1.0.0",
  "private": true,
  "author": {
    "name": "john.chen",
    "url": "https://github.com/john-data-chen/turborepo-starter-kit"
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "test": "turbo test",
    "test:watch": "turbo run test:watch",
    "playwright": "turbo run playwright --filter=./apps/web",
    "playwright:install": "pnpm --filter=./apps/web exec playwright install --with-deps",
    "init-db": "turbo run init-db",
    "init-db:force": "turbo run init-db:force",
    "storybook": "turbo run storybook --filter=@repo/ui",
    "storybook:build": "turbo run storybook:build --filter=@repo/ui",
    "storybook:test": "turbo run storybook:test --filter=@repo/ui",
    "prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then husky; fi",
    "commit": "git-cz"
  },
  "packageManager": "pnpm@10.26.1",
  "engines": {
    "node": ">=24.11.0"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,css,scss}": [
      "oxfmt --no-error-on-unmatched-pattern --config ./.oxfmtrc.json"
    ],
    "**/*.{js,jsx,ts,tsx}": [
      "npx oxlint --config ./packages/linter-config/.oxlintrc.json --type-aware --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@commitlint/cz-commitlint": "^20.2.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "@vitest/coverage-v8": "^4.0.16",
    "commitizen": "^4.3.1",
    "dotenv": "^17.2.3",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.19.0",
    "oxlint": "^1.34.0",
    "oxlint-tsgolint": "^0.10.0",
    "start-server-and-test": "^2.1.3",
    "turbo": "^2.7.1",
    "unplugin-swc": "^1.5.9",
    "vitest": "^4.0.16"
  },
  "pnpm": {
    "overrides": {
      "react": "^19.2.3",
      "react-dom": "^19.2.3",
      "@radix-ui/react-icons": "^1.3.2",
      "class-variance-authority": "^0.7.1",
      "react-hook-form": "^7.68.0",
      "tailwindcss": "^4.1.18",
      "@types/react": "^19.2.7",
      "@types/react-dom": "^19.2.3",
      "@types/node": "^24.10.4",
      "lucide-react": "^0.562.0",
      "oxlint": "^1.34.0",
      "oxlint-tsgolint": "^0.9.2",
      "jsdom": "^27.3.0",
      "vitest": "^4.0.16",
      "@vitest/coverage-v8": "^4.0.16",
      "typescript": "^5.9.3",
      "dotenv": "^17.2.3",
      "@testing-library/react": "^16.3.1"
    },
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@parcel/watcher",
      "@scarf/scarf",
      "@swc/core",
      "@tailwindcss/oxide",
      "esbuild",
      "sharp",
      "unrs-resolver"
    ]
  },
  "dependencies": {
    "vite-tsconfig-paths": "^5.1.4"
  }
}