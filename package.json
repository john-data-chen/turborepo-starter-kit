{
  "name": "turborepo-starter-kit",
  "version": "1.0.0",
  "private": true,
  "author": {
    "name": "john.chen",
    "url": "https://github.com/john-data-chen/turborepo-starter-kit"
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "test": "turbo test",
    "test:watch": "turbo run test:watch",
    "playwright": "turbo run playwright --filter=web",
    "init-db": "turbo run init-db",
    "init-db:force": "turbo run init-db:force",
    "prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then husky; fi",
    "commit": "git-cz"
  },
  "engines": {
    "node": "22.x"
  },
  "packageManager": "pnpm@10.14.0",
  "lint-staged": {
    "apps/web/**/*.{js,jsx,ts,tsx,css,scss}": [
      "pnpm --filter web format"
    ],
    "apps/web/**/*.{js,jsx,ts,tsx}": [
      "pnpm --filter web lint"
    ],
    "apps/api/**/*.{js,ts}": [
      "pnpm --filter api format",
      "pnpm --filter api lint"
    ],
    "packages/**/*.{js,ts,json}": [
      "pnpm --filter style-formatter-config exec prettier --write --no-error-on-unmatched-pattern"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/cz-commitlint": "^19.8.1",
    "commitizen": "^4.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "turbo": "^2.5.6"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.1.4",
      "@types/react-dom": "19.1.5"
    },
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@scarf/scarf",
      "@swc/core",
      "@tailwindcss/oxide",
      "esbuild",
      "sharp"
    ]
  }
}