{
  "name": "turborepo-starter-kit",
  "version": "1.0.0",
  "private": true,
  "author": {
    "name": "john.chen",
    "url": "https://github.com/john-data-chen/turborepo-starter-kit"
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "test": "turbo test",
    "test:watch": "turbo run test:watch",
    "playwright": "turbo run playwright --filter=web",
    "init-db": "turbo run init-db",
    "init-db:force": "turbo run init-db:force",
    "prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then husky; fi",
    "commit": "git-cz"
  },
  "engines": {
    "node": ">=22.11.0"
  },
  "packageManager": "pnpm@10.18.0",
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,css,scss}": [
      "prettier --ignore-path ./.prettierignore --write --no-error-on-unmatched-pattern --config ./prettier.config.js"
    ],
    "**/*.{js,jsx,ts,tsx}": [
      "npx oxlint --config ./packages/linter-config/.oxlintrc.json --type-aware --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/cz-commitlint": "^20.1.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "commitizen": "^4.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "oxlint": "^1.19.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^2.5.8"
  },
  "pnpm": {
    "overrides": {
      "react": "^19.2.0",
      "react-dom": "^19.2.0",
      "postcss": "^8.5.6",
      "@types/react": "19.2.0",
      "@types/react-dom": "19.2.0",
      "oxlint": "^1.19.0",
      "typescript": "^5.9.3"
    },
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@scarf/scarf",
      "@swc/core",
      "@tailwindcss/oxide",
      "esbuild",
      "sharp",
      "unrs-resolver"
    ]
  }
}