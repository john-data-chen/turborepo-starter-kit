{
  "version": 2,
  "builds": [
    {
      "src": "apps/api/src/main.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["apps/api/src/**/*.ts", "apps/api/package.json"],
        "zeroConfig": false
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "apps/api/src/main.ts"
    }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "outputDirectory": "dist"
}